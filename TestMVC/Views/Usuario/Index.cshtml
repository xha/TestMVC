@model IEnumerable<TestMVC.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>@ViewBag.Title</h2>

<center>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create","Usuario")'">Crear Nuevo</button>
    <br /><br />
</center>
<table class="tablas inicial00">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_registro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_registro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id_usuario }) |
            @Html.ActionLink("Vista", "Details", new { id = item.id_usuario }) |
            @Html.ActionLink("Desactivar", "Delete", new { id = item.id_usuario })
        </td>
    </tr>
}

</table>
